@model Library_Management.Models.BookDetailsViewModel

@{
    ViewData["Title"] = $"Book: {Model.Title}";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <!-- Book Information -->
            <div class="card shadow mb-4">
                <div class="card-body">
                    <div class="row g-4">
                        <!-- Cover Image -->
                        <div class="col-md-4 text-center">
                            @if (!string.IsNullOrEmpty(Model.BookCopies.FirstOrDefault()?.CoverImageUrl))
                            {
                                <img src="@Model.BookCopies.FirstOrDefault()?.CoverImageUrl"
                                     class="img-fluid rounded shadow-sm"
                                     alt="@Model.Title"
                                     style="max-height: 400px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="bg-light d-flex align-items-center justify-content-center rounded shadow-sm"
                                     style="height: 400px;">
                                    <i class="bi bi-book text-muted" style="font-size: 4rem;"></i>
                                </div>
                            }
                        </div>

                        <!-- Details -->
                        <div class="col-md-8">
                            <h1 class="display-5 fw-bold mb-3">@Model.Title</h1>
                            
                            <dl class="row mb-3">
                                <dt class="col-sm-3 fw-semibold">ISBN:</dt>
                                <dd class="col-sm-9">@Model.ISBN</dd>

                                <dt class="col-sm-3 fw-semibold">Author:</dt>
                                <dd class="col-sm-9 d-flex align-items-center">
                                    @if (Model.AuthorId.HasValue)
                                    {
                                        <a asp-controller="Author" asp-action="Details" asp-route-id="@Model.AuthorId" 
                                           class="text-decoration-none">@Model.AuthorName</a>
                                    }
                                    else
                                    {
                                        @Model.AuthorName
                                    }
                                    @if (!string.IsNullOrEmpty(Model.AuthorProfileImageUrl))
                                    {
                                        <img src="@Model.AuthorProfileImageUrl"
                                             class="rounded-circle ms-2"
                                             style="width: 30px; height: 30px; object-fit: cover;"
                                             alt="Author Profile">
                                    }
                                </dd>

                                <dt class="col-sm-3 fw-semibold">Genre:</dt>
                                <dd class="col-sm-9">@Model.Genre</dd>

                                <dt class="col-sm-3 fw-semibold">Published:</dt>
                                <dd class="col-sm-9">@Model.PublishedDate?.ToString("MMMM dd, yyyy")</dd>
                            </dl>

                            <div class="mb-3">
                                <span class="badge bg-primary me-2">@Model.TotalCopies total copies</span>
                                <span class="badge bg-success me-2">@Model.AvailableCopies available</span>
                                @if (Model.PulledOutCopies > 0)
                                {
                                    <span class="badge bg-warning text-dark">@Model.PulledOutCopies pulled out</span>
                                }
                                @if (Model.IsArchived)
                                {
                                    <span class="badge bg-secondary ms-2">Archived</span>
                                }
                            </div>

                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <h5 class="fw-semibold">Description</h5>
                                <p class="mb-0">@Model.Description</p>
                            }
                        </div>
                    </div>
                    
                    <hr>
                    
                    <div class="d-flex gap-2 flex-wrap">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Books
                        </a>
                        <a asp-action="EditModal" asp-route-id="@Model.BookId" class="btn btn-outline-primary">
                            <i class="bi bi-pencil"></i> Edit Book
                        </a>
                        <form asp-action="AddCopy" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@Model.BookId" />
                            <button type="submit" class="btn btn-outline-success">
                                <i class="bi bi-plus-circle"></i> Add Copy
                            </button>
                        </form>
                        @if (!Model.IsArchived)
                        {
                            <button type="button" class="btn btn-outline-warning" onclick="archiveBook('@Model.BookId')">
                                <i class="bi bi-archive"></i> Archive
                            </button>
                        }
                        else
                        {
                            <form asp-action="Restore" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@Model.BookId" />
                                <button type="submit" class="btn btn-outline-success" 
                                        onclick="return confirm('Are you sure you want to restore this book?')">
                                    <i class="bi bi-arrow-clockwise"></i> Restore
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>

            <!-- Book Copies -->
            <div class="card shadow">
                <div class="card-header bg-light">
                    <h4 class="mb-0">Book Copies (@Model.TotalCopies)</h4>
                </div>
                <div class="card-body">
                    @if (Model.BookCopies.Any())
                    {
                        <div class="row g-3">
                            @foreach (var copy in Model.BookCopies)
                            {
                                <div class="col-md-6 col-lg-4">
                                    <div class="card @(copy.IsPulledOut ? "border-warning" : "border-success") h-100">
                                        <div class="card-header @(copy.IsPulledOut ? "bg-warning text-dark" : "bg-success text-white") py-2">
                                            <small class="fw-semibold">
                                                @if (copy.IsPulledOut)
                                                {
                                                    <text><i class="bi bi-exclamation-triangle"></i> Pulled Out</text>
                                                }
                                                else
                                                {
                                                    <text><i class="bi bi-check-circle"></i> Available</text>
                                                }
                                            </small>
                                        </div>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-4">
                                                    @if (!string.IsNullOrEmpty(copy.CoverImageUrl))
                                                    {
                                                        <img src="@copy.CoverImageUrl" 
                                                             class="img-fluid rounded" 
                                                             alt="Book Cover"
                                                             style="height: 80px; object-fit: cover;">
                                                    }
                                                    else
                                                    {
                                                        <div class="bg-light d-flex align-items-center justify-content-center rounded"
                                                             style="height: 80px;">
                                                            <i class="bi bi-book text-muted"></i>
                                                        </div>
                                                    }
                                                </div>
                                                <div class="col-8">
                                                    <small class="text-muted d-block">Condition: @copy.Condition</small>
                                                    <small class="text-muted d-block">Source: @copy.Source</small>
                                                    <small class="text-muted d-block">Added: @copy.AddedDate?.ToString("MM/dd/yyyy")</small>
                                                    @if (copy.IsPulledOut)
                                                    {
                                                        <small class="text-warning d-block">Pulled: @copy.PulloutDate?.ToString("MM/dd/yyyy")</small>
                                                        <small class="text-warning d-block">Reason: @copy.PulloutReason</small>
                                                    }
                                                </div>
                                            </div>
                                            @if (!copy.IsPulledOut)
                                            {
                                                <div class="mt-2">
                                                    <button type="button" class="btn btn-outline-warning btn-sm w-100" 
                                                            onclick="openPulloutModal('@copy.Id')">
                                                        <i class="bi bi-box-arrow-down"></i> Pull Out
                                                    </button>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-book" style="font-size: 4rem; color: #6c757d;"></i>
                            <h5 class="mt-3 text-muted">No Copies Available</h5>
                            <p class="text-muted">Add some copies to make this book available in the library.</p>
                            <form asp-action="AddCopy" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@Model.BookId" />
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-plus-circle"></i> Add First Copy
                                </button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Pull-out Modal -->
<div class="modal fade" id="pulloutModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="pulloutModalContent">
            <!-- Content will be loaded here -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openPulloutModal(bookCopyId) {
            fetch(`/Book/PulloutModal/${bookCopyId}`)
                .then(response => response.text())
                .then(html => {
                    document.getElementById('pulloutModalContent').innerHTML = html;
                    var pulloutModal = new bootstrap.Modal(document.getElementById('pulloutModal'));
                    pulloutModal.show();
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error loading pull-out modal');
                });
        }

        function archiveBook(bookId) {
            if (confirm('Are you sure you want to archive this book? This will make it unavailable in the main book listing.')) {
                var form = document.createElement('form');
                form.method = 'POST';
                form.action = '/Book/Archive/' + bookId;
                
                var token = document.querySelector('input[name="__RequestVerificationToken"]');
                if (token) {
                    var hiddenField = document.createElement('input');
                    hiddenField.type = 'hidden';
                    hiddenField.name = '__RequestVerificationToken';
                    hiddenField.value = token.value;
                    form.appendChild(hiddenField);
                }
                
                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
}
